@model IEnumerable<RestauranteMaMonolitica.Web.Data.Models.FacturaGetModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Factura</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@if (ViewBag.Message is null)
{
  <span class="alert-danger">@ViewBag.Message</span>  
}

<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.creation_date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.creation_date)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.IdFactura  }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdFactura }) |
                    
            </td>
        </tr>
}
    </tbody>
</table>
